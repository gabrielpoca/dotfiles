[init]
	defaultBranch = master
[user]
	name = Gabriel Poca
	email = mail@gabrielpoca.com
[push]
	default = current
	autoSetupRemote = true
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = nvim
  attributesfile = ~/.gitattributes
  pager = diff-so-fancy | less --tabs=2 -RFX
[github]
  user = gabrielpoca
[commit]
  template = ~/.gitcommit
[alias]
  a = add
  b = branch
  c = checkout
  cb = checkout -b
  co = commit
  d = diff
  f = fetch
  p = push -u
  r = rebase
  rc = rebase --continue
  s = status
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
