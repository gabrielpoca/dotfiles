#http://thume.ca/howto/2012/11/19/using-slate/

# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

# Misc Aliases
alias showHintsLeftHand hint QWEASDZXC
alias showNormalHint hint QWEASDZXC
alias browser 'Chromium'
alias editor 'MacVim'

# ======================================
# The HYPER key
# ======================================

alias hyper ctrl;shift;alt;cmd

bind f:${hyper}  ${showNormalHint}
bind m:${hyper} layout 1monitor

# Location bindings
bind j:${hyper} ${lefthalf}
bind k:${hyper} ${full}
bind l:${hyper} ${righthalf}

# Resize Bindings
#bind r:${hyper} ${leftmost}
#bind g:${hyper} ${rightmost}

# Focus Bindings
bind right:${hyper}    focus right
bind left:${hyper}     focus left
bind up:${hyper}       focus up
bind down:${hyper}     focus down

# App bindings
bind u:${hyper} focus ${browser}
bind i:${hyper} focus ${editor}
bind o:${hyper} focus 'iTerm'
bind p:${hyper} focus 'Adium'
